{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es5",
    "module": "ES2015",
    "strict": true,
    "lib": [
      "DOM",
      "esnext"
    ],
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "deno",
    "scripts"
  ]
}
